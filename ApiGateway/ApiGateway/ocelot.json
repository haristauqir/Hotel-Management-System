{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/Hotel/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
              {
                  "Host": "hotelapi",
                  "Port": 80
              }
          ],
      "UpstreamPathTemplate": "/hotel-api/{everything}"
  },
  {
    "DownstreamPathTemplate": "/api/Room/{everything}",
    "DownstreamScheme": "http",
    "DownstreamHostAndPorts": [
            {
                "Host": "hotelapi",
                "Port": 80
            }
        ],
    "UpstreamPathTemplate": "/Room-api/{everything}"
  },
  {
    "DownstreamPathTemplate": "/api/Account/{everything}",
    "DownstreamScheme": "http",
    "DownstreamHostAndPorts": [
            {
                "Host": "identityapi",
                "Port": 80
            }
        ],
    "UpstreamPathTemplate": "/identity-api/{everything}"
}
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:4000"
  }
}